                <materialDesign:ColorZone Mode="PrimaryDark" Padding="16"
                        VerticalAlignment="Stretch" 
                        DockPanel.Dock="Top">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal"
                                materialDesign:RippleAssist.IsCentered="True">
                            <ToggleButton x:Name="MenuToggleButton"
                                    Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                            <Label Content="稼動監控系統 Delta 1.0"
                                    VerticalContentAlignment="Center"
                                    FontSize="{DynamicResource {x:Static SystemParameters.CaptionHeightKey}}" />
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>-->


                <materialDesign:DialogHost Identifier="RootDialog" Grid.Row="0" Grid.Column="0"
                                           Margin="0,50"
            SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
                    <materialDesign:DrawerHost
                IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
                        <StackPanel Margin="4,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="75"/>
                                    <RowDefinition Height="75"/>
                                    <RowDefinition Height="75"/>
                                    <RowDefinition Height="75"/>
                                    <RowDefinition Height="75"/>

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="300"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock  HorizontalAlignment="Center" Text="東" FontSize="55" Name="Dispaly_LocationName_F"></TextBlock>
                                    <TextBlock  HorizontalAlignment="Center" Text="京" FontSize="55" Name="Dispaly_LocationName_S" Margin="0,-12,0,0"></TextBlock>
                                </StackPanel>
                                <Grid Grid.Column="1" Grid.Row="0"  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:Card Margin="10,30" Grid.Column="0" Grid.Row="0"   Background="{DynamicResource UmaGrayBrush}">
                                        <Grid  HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                                                       Grid.Column="0" 
                                                       Width="90"
                                                       TextAlignment="Right"
                                                       Margin="0,-20,10,-20"
                                                       Name="Display_RaceRound"
                                                       Foreground="{DynamicResource UmaYellowBrush}"
                                                       FontSize="80"
                                                       Text="12" />
                                        </Grid>
                                    </materialDesign:Card>

                                    <Grid  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                       Margin="-50,0,0,0"
                                                       FontSize="55"
                                                       Foreground="White"
                                                       Text="R" />

                                    </Grid>
                                </Grid>

                                <materialDesign:Card 
                                    Name="Display_RankStatusCard"
                                    Grid.Column="2" Margin="15,10,15,5" Grid.Row="0" Background="{DynamicResource UmaRedBrush}">
                                    <TextBlock 
                                        Name="Display_RankStatusText"
                                        Text="確定" 
                                        FontSize="140"
                                        VerticalAlignment="Center"
                                        Margin="0,-25" 
                                        HorizontalAlignment="Center"/>
                                </materialDesign:Card>

                                <Grid Width="70" Height="70"  Grid.Column="0" Grid.Row="1">
                                    <Ellipse Stroke="{DynamicResource UmaBlueBrush}" Fill="{DynamicResource UmaBlueBrush}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="Ⅰ"  FontSize="50" TextAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <StackPanel Margin="10,5,10,5"  Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
                                    <materialDesign:Card   Background="{DynamicResource UmaGrayBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_1st_Ten"
                                                           Margin="5,0"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"
                                                           Text="1" />
                                            </StackPanel>
                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"             
                                                           Name="Dispaly_Rank_1st_Digits"
                                                           Margin="5,0"                                    
                                                           Foreground="{DynamicResource UmaYellowBrush}"                                 
                                                           FontSize="70"                                           
                                                           Text="1" />
                                            </StackPanel>

                                        </Grid>
                                    </materialDesign:Card>
                                </StackPanel>

                                <Grid Width="70" Height="70"  Grid.Column="0" Grid.Row="2">
                                    <Ellipse Stroke="{DynamicResource UmaBlueBrush}" Fill="{DynamicResource UmaBlueBrush}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="Ⅱ"  FontSize="50" TextAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <StackPanel Margin="10,5,10,5"  Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">
                                    <materialDesign:Card  Background="{DynamicResource UmaGrayBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_2nd_Ten"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"
                                                           Text="" />
                                            </StackPanel>
                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_2nd_Digits"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"
                                                           Text="9" />
                                            </StackPanel>

                                        </Grid>
                                    </materialDesign:Card>
                                </StackPanel>

                                <Grid Width="70" Height="70"  Grid.Column="0" Grid.Row="3">
                                    <Ellipse Stroke="{DynamicResource UmaBlueBrush}" Fill="{DynamicResource UmaBlueBrush}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="Ⅲ"  FontSize="50" TextAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <StackPanel Margin="10,5,10,5"  Grid.Column="1" Grid.Row="3" VerticalAlignment="Center">
                                    <materialDesign:Card   Background="{DynamicResource UmaGrayBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_3rd_Ten"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"        
                                                           Text="" />
                                            </StackPanel>
                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_3rd_Digits"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"
                                                           Text="7" />
                                            </StackPanel>

                                        </Grid>
                                    </materialDesign:Card>
                                </StackPanel>

                                <Grid Width="70" Height="70"  Grid.Column="0" Grid.Row="4">
                                    <Ellipse Stroke="{DynamicResource UmaBlueBrush}" Fill="{DynamicResource UmaBlueBrush}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="Ⅳ"  FontSize="50" TextAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <StackPanel Margin="10,5,10,5"  Grid.Column="1" Grid.Row="4"  VerticalAlignment="Center">
                                    <materialDesign:Card   Background="{DynamicResource UmaGrayBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_4th_Ten"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"
                                                           Text="" />
                                            </StackPanel>
                                            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                           Name="Dispaly_Rank_4th_Digits"
                                                           Foreground="{DynamicResource UmaYellowBrush}"
                                                           FontSize="70"
                                                           Text="3" />
                                            </StackPanel>

                                        </Grid>
                                    </materialDesign:Card>
                                </StackPanel>

                                <Grid Width="70" Height="70"  Grid.Column="0" Grid.Row="5">
                                    <Ellipse Stroke="{DynamicResource UmaBlueBrush}" Fill="{DynamicResource UmaBlueBrush}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="Ⅴ"  FontSize="50" TextAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <StackPanel Margin="10,5,10,5"  Grid.Column="1" Grid.Row="5"  VerticalAlignment="Center">
                                    <materialDesign:Card   Background="{DynamicResource UmaGrayBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"         

                                            >
                                            <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                                                       Margin="0,-10"
                                                       Name="Dispaly_Timer_Four_Furlong_Decile"
                                                       Foreground="{DynamicResource UmaYellowBrush}"
                                                       FontSize="70"
                                                       Width="41"
                                                       Text="5" />
                                        </materialDesign:Card>
                                    </StackPanel>
                                    <StackPanel Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Right" Orientation="Horizontal">
                                        <materialDesign:Card
                                            Background="{DynamicResource UmaGrayBrush}" 
                                            VerticalAlignment="Center"
                                            />

                                        <materialDesign:Card
                                            Background="{DynamicResource UmaGrayBrush}" 
                                            VerticalAlignment="Center"
                                            >
                                            <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                                                       TextAlignment="Right"
                                                       Margin="0,-10"                                                       
                                                       Name="Dispaly_Timer_Three_Furlong"
                                                       Foreground="{DynamicResource UmaYellowBrush}"
                                                       FontSize="70"
                                                       Width="82"
                                                       Text="7" />
                                        </materialDesign:Card>
                                        <TextBlock FontSize="45" VerticalAlignment="Bottom" Margin="2,-5">.</TextBlock>
                                        <materialDesign:Card
                                            Background="{DynamicResource UmaGrayBrush}" 
